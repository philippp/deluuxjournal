<div id="blogheader" class="section yui-g">
  <% if is_owner? %>
    <div class="editoptions">
      <%= app_link_to 'New note', :action => :new %>
    </div>
  <% end %>
  <h1>My blog</h1>
</div>
<div class="yui-ge">
  <div class="yui-u first">
    <% for note in @notes %>
    <div class="note section">
      <div class="editoptions">
        <%= app_link_to 'show' , {:action => :show, :id => note.id}, {:class => "show"} %>
        <% if is_owner? %>
          <%= app_link_to 'edit' , {:action => :edit, :id => note.id}, {:class => "edit"} %>
          <%= app_link_to 'delete' , {:action => :destroy, :id => note.id}, {:class => "destroy"} %>
        <% end %>
      </div>
      <h2 class="title subsection">
        <%= app_link_to note.title , {:action => :show, :id => note.id}, {:class => "edit"} %>
      </h2>
      <div class="created_at subsection">
        <weak><%= time_ago_in_words(note.created_at) %> ago.</weak>
      </div>
      <div class="text subsection">
        <%= note.text[0,300]+"..." %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="yui-u">
  </div>
</div>


